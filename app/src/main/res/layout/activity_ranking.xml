<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/gradient_background">

    <ImageButton
        android:id="@+id/BtnBackRanking"
        android:layout_width="@dimen/back"
        android:layout_height="@dimen/back"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_button"
        android:src="@drawable/back"
        android:padding="@dimen/paddingback"
        android:layout_margin="@dimen/marginflag"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/goldmedal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/TxtPrimero"
                android:textAlignment="center"
                android:textSize="@dimen/textRankingTitul"
                android:textColor="@color/oro"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/silvermedal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/TxtSegundo"
                android:textAlignment="center"
                android:textSize="@dimen/textRankingTitul"
                android:textColor="@color/plata"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/bronzemedal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/TxtTercero"
                android:textAlignment="center"
                android:textSize="@dimen/textRankingTitul"
                android:textColor="@color/bronce"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_margin="@dimen/marginRanking"
        android:background="@drawable/rounded_ranking"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ranking"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="@dimen/textRankingTitul"
            android:layout_marginBottom="20dp"
            android:textColor="@color/negro"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/position"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/textRanking"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/textRanking"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medals"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/textRanking"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/points"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/textRanking"
                android:textAlignment="center"/>
        </LinearLayout>

        <GridView
            android:id="@+id/GridRanking"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:footerDividersEnabled="false"
            android:numColumns="1"
            android:columnWidth="@dimen/columna"
            android:verticalSpacing="@dimen/paddingColumna"
            android:horizontalSpacing="@dimen/paddingColumna"
            android:stretchMode="columnWidth"/>
    </LinearLayout>

</LinearLayout>
